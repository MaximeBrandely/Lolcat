<table data-toggle="table" data-sort-name="row" data-sort-order="desc" class="table table-hover" >
    <thead>
        <tr>
            <th scope="col">Commande</th>
            <th scope="col">Date</th>
            <th scope="col">Statut</th>
            <th scope="col">Prix</th>
        </tr>
    </thead>
    <tbody>
        <%  @orders.order('created_at DESC').each do |order| %>
        <tr>
            <th scope="row"><%= order.id%></th>
            <td><%= order.created_at %></td>
            <td><%= order.status %></td>
            <td><%= order.compute_total(order) %></td>
        <%end%>
        <%= link_to  "Editez votre profil", edit_user_registration_path(current_user) %>
        </tr>
    </tbody>
</table>
