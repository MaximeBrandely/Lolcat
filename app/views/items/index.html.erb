 <!-- Page Content -->
    <div class="container">

      <div class="row">

        <div class="col-lg-3">

          <h1 class="my-4">LOL Carts</h1>
          <div class="list-group">
            <% if current_user != nil %>
              <%= link_to "Mon panier", cart_path(current_user.cart.id), class:"list-group-item" %>
            <% end %>
            <a href="#" class="list-group-item">Trending lolcats</a>
          </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <%= image_tag("img1.jpg", alt:"image 1", class:"d-block img-fluid") %>
              </div>
              <div class="carousel-item">
                <%= image_tag("img2.jpg", alt:"image 1", class:"d-block img-fluid") %>
              </div>
              <div class="carousel-item">
                <%= image_tag("img3.jpg", alt:"image 1", class:"d-block img-fluid") %>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>



         	<div class="row">

         		<% Item.all.order('created_at DESC').take(20).each do |img| %>

         	  <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <%= link_to image_tag(img.image_url,  heigth:"80", alt:'image '+img.id.to_s, class:'card-img-top'), item_path(img.id) %>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to 'Voir', item_path(img.id) %>
                  </h5>
                  <h5><%= img.price %>â‚¬</h5>
                  <% if current_user != nil %>
                  <%= link_to 'Ajouter au panier', add_item_from_index_path(img.id), :method => "post", class:"small p-2 btn-s btn-success" %>
                  <% end %>
                </div>
                <div class="card-footer">
                  <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>
              </div>
            </div>

            <% end %>


          </div>
          <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->
